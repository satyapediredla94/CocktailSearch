<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.example.cocktails.fragment.drink_details.DrinkDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/bg_blue">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:theme="@style/Theme.Design.NoActionBar"
            android:background="@color/little_dark_purple"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                app:title="@string/drinkdetails"
                >

                <ImageView
                    android:id="@+id/toolbarImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:contentDescription="@string/drinkimage"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextColor="@color/black"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/back_button"
                        android:src="@drawable/ic_back"
                        tools:ignore="ContentDescription" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".fragment.drink_details.DrinkDetailsFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_blue"
                >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewmodel.progress ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredients"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/ingredients"
                    android:padding="@dimen/text_view_padding"
                    android:background="@color/bg_blue"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/text_view_padding_8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ingredient_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ingredients"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="@dimen/text_view_padding_8dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/little_dark_purple"
                    app:cardCornerRadius="@dimen/text_view_padding_8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:id="@+id/ingredients_details"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ingredient_name"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_one"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_two"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_three"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_four"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_five"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_six"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_seven"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_eight"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_nine"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_ten"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_eleven"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_twelve"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_thirteen"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_fourteen"
                                android:padding="@dimen/text_view_padding_8dp"
