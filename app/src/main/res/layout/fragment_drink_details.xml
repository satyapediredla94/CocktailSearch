                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ingredient_quantity"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_one"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_two"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_three"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_four"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_five"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_six"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_seven"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_eight"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_nine"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_ten"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_eleven"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_twelve"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_thirteen"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_fourteen"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ingredient_quantity_fifteen"
                                android:padding="@dimen/text_view_padding_8dp"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/inst_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="@string/instructions"
                    android:visibility="@{!viewmodel.progress ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/ingredient_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="@dimen/text_view_padding"
                    android:background="@color/bg_blue"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/text_view_padding_8dp"
                    app:layout_constraintCircleRadius="@dimen/text_view_padding_8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/inst_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="@dimen/text_view_padding_8dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/little_dark_purple"
                    app:cardCornerRadius="@dimen/text_view_padding_8dp"
                    android:textColor="@color/black"
                    >

                    <TextView
                        android:id="@+id/instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        tools:text="@string/lorem_epsum"
                        android:padding="@dimen/text_view_padding"/>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>