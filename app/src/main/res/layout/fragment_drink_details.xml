                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                tools:text="@string/ingredient"
                                android:layout_marginStart="@dimen/text_view_padding_8dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
